pipeline {
	agent {
		label "master"
	}


	options {
		timestamps()
        parallelsAlwaysFailFast()
	}
	stages {
		stage ('Incremental Build') {
            
            parallel {
            	stage('In Parallel 1') {
            		tools {
		                maven "maven3"
	                } 
                    steps {
                        sh "sleep 1"
                        sh "exit 1"
                        sh "mvn -v"
                        sh "echo 1"
                    }
                }
                stage('In Parallel 2') {
                    steps {
                        sh "echo 2"
                        sh "sleep 2"
                        sh "echo 3"
                    }
                }
            }
        }
	}
}